<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">
        <shape>
		    <gradient
		        android:startColor="@color/boton_paginacion_01"
		        android:centerColor="@color/boton_paginacion_01"
		        android:endColor="@color/boton_paginacion_02"
				android:angle="270" />
			<corners android:radius="@dimen/radio_btn_paginacion" />
			<padding android:left="@dimen/padding_btn_paginacion" android:top="@dimen/padding_btn_paginacion"
				android:right="@dimen/padding_btn_paginacion" android:bottom="@dimen/padding_btn_paginacion" />
		</shape>
	</item>

	<item android:state_focused="true">
	    <shape>
		    <gradient
		        android:startColor="@color/azul_claro"
		        android:centerColor="@color/azul_oscuro"
		        android:endColor="@color/azul_oscuro"
				android:angle="270" />
			<corners android:radius="@dimen/radio_btn_paginacion" />
			<padding android:left="@dimen/padding_btn_paginacion" android:top="@dimen/padding_btn_paginacion"
				android:right="@dimen/padding_btn_paginacion" android:bottom="@dimen/padding_btn_paginacion" />
		</shape>
	</item>
	
	<item>
		<shape>
		    <gradient
		        android:startColor="@color/boton_paginacion_02"
		        android:centerColor="@color/boton_paginacion_01"
		        android:endColor="@color/boton_paginacion_01"
				android:angle="270" />
			<corners android:radius="@dimen/radio_btn_paginacion" />
			<padding android:left="@dimen/padding_btn_paginacion" android:top="@dimen/padding_btn_paginacion"
				android:right="@dimen/padding_btn_paginacion" android:bottom="@dimen/padding_btn_paginacion" />
		</shape>
	</item>
	

</selector>